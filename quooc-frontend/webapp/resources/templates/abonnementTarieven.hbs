<div id="verwijderModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="verwijderModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="verwijderModalLabel">Verwijder tarief</h3>
  </div>
  <div class="modal-body">
    <p>Weet u zeker dat u dit tarief wilt verwijderen?</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Nee</button>
    <button class="bevestig-verwijder btn btn-danger">Ja</button>
  </div>
</div>

{{#each tarieven}}
<div class="span4">
  <table class="table table-condensed table-bordered">
    <tbody>
      <tr>
        <td>Maandtarief</td>
        <td>{{{currency maandBedrag.amount}}}</td>
      </tr>
      <tr>
        <td>Startdatum</td>
        <td>{{{date startdatum}}}</td>
      </tr>
      <tr>
        <td>Einddatum</td>
        <td>{{{date einddatum}}}</td>
      </tr>
      <tr>
        <td>Assurantiebelasting (over <span id="assurantiebelastingOverPercentageText">{{number ../assurantiebelastingOverPercentage 2}}</span>%)</td>
        <td id="assurantiebelastingOverBedrag">{{{currency assurantiebelastingOverBedrag}}}</td>
      </tr>
      <tr>
        <td>BTW (over <span id="btwOverPercentageText">{{number ../btwOverPercentage 2}}</span>%)</td>
        <td id="btwOverBedrag">{{{currency btwOverBedrag}}}</td>
      </tr>
      <tr>
        <td>Totaal</td>
        <td id="totaalBedrag">{{{currency totaalBedrag}}}</td>
      </tr>
      {{#if _toekomstig}}
      <tr>
        <td colspan="2">
          <input type="hidden" name="id" value="{{id}}" />
          <button type="button" class="btn btn-small verwijderenTarief">Verwijderen</button>
        </td>
      </tr>
      {{/if}}
    </tbody>
  </table>
</div>
{{/each}}


<form id="tariefForm" class="form-horizontal" style="display: none;">
  <div class="row-fluid">
    <legend>Nieuw tarief</legend>
    <div class="control-group">
      <label class="control-label">Maandtarief</label>
      <div class="controls">
        <input type="text" name="nieuwMaandTarief" id="nieuwMaandTarief">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Startdatum</label>
      <div class="controls">
        <input type="hidden" name="nieuwStartdatum" id="nieuwStartdatum" value="">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Einddatum</label>
      <div class="controls">
        <input type="hidden" name="nieuwEinddatum" id="nieuwEinddatum" value="">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Assurantiebelasting (over <span id="assurantiebelastingOverPercentageText">{{number assurantiebelastingOverPercentage 2}}</span>%)</label>
      <div class="controls">
         <span id="nieuwAssurantiebelastingOverBedrag">{{{currency assurantiebelastingOverBedrag}}}</span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">BTW (over <span id="btwOverPercentageText">{{number btwOverPercentage 2}}</span>%)</label>
      <div class="controls">
         <span id="nieuwBtwOverBedrag">{{{currency btwOverBedrag}}}</span>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Totaal</span></label>
      <div class="controls">
         <span id="nieuwTotaalBedrag">{{{currency totaalBedrag}}}</span>
      </div>
    </div>
  </div>
  <div class="row-fluid tariefFormButtons">
    <div class="span12">
      <div class="form-actions">
        <button type="button" class="btn btn-primary opslaanTarief">Opslaan</button>
        <button type="button" class="btn annuleren">Annuleren</button>
      </div>
    </div>
  </div>
</form>



<div class="row-fluid tarievenButtons">
  <div class="span12">
    <div class="form-actions">
      <button type="button" class="btn btn-primary nieuwTarief">Nieuw</button>
    </div>
  </div>
</div>
